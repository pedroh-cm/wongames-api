{
  "kind": "collectionType",
  "collectionName": "games",
  "info": {
    "singularName": "game",
    "pluralName": "games",
    "displayName": "game"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "short_description": {
      "type": "text"
    },
    "price": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "release_date": {
      "type": "date"
    },
    "description": {
      "type": "blocks"
    },
    "rating": {
      "type": "enumeration",
      "enum": ["BR0", "BR10", "BR12", "BR14", "BR16", "BR18"]
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images", "files", "videos", "audios"]
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "games"
    },
    "platforms": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::platform.platform",
      "inversedBy": "games"
    },
    "developers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::developer.developer",
      "mappedBy": "games"
    },
    "publisher": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::publisher.publisher",
      "inversedBy": "games"
    }
  }
}
